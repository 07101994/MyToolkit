                        ItemsSource="{Binding Path=ItemsSource, RelativeSource={RelativeSource TemplatedParent}}"
                        ItemTemplate="{Binding Path=ItemTemplate, RelativeSource={RelativeSource TemplatedParent}}">
						<UI:ExtendedItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<VirtualizingStackPanel Orientation="Vertical"/>
							</ItemsPanelTemplate>
						</UI:ExtendedItemsControl.ItemsPanel>
						<UI:ExtendedItemsControl.Template>
							<ControlTemplate>
								<ScrollViewer>
                                    <ItemsPresenter x:Name="itemsPresenter" />
								</ScrollViewer>
							</ControlTemplate>
						</UI:ExtendedItemsControl.Template>
					</UI:ExtendedItemsControl>-->
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
  